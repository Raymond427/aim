@import "mixins";

.board-member__wrapper {
  @include content-wrapper(1200px);
}

.board-member {
  @include exec-and-news-elements(200px, 500px, 200px, 200px, 300px, 200px);
  margin: 10px 10px;

  div {
    @media (max-width: 540px) {
      flex-direction: column;
      width: 300px;

      .board-member__pic, .board-member__info {
        width: 300px;
      }
      .board-member__pic {
        height: 300px;
        img {
          height: 300px;
          width: 300px;
        }
      }
    }
  }
}

.linkedin-button[type="submit"] {
	background-image: url(<%= asset_path('Sign-In-Large---Default.png') %>);
	background-repeat: no-repeat;
	background-size: cover;
	background-color: transparent;
	width: 215px;
	height: 40px;

  &:hover {
    background-color: transparent;
    background-image: url(<%= asset_path('Sign-In-Large---Hover.png') %>);
  	transition: none;
    background-color: transparent;
  }
  &:active {
    background-image: url(<%= asset_path('Sign-In-Large---Active.png') %>);
  }
}


.after_signup {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;

  div {
    width: 300px;
    height: 380px;
    padding: 0 10px 0 10px;

    h2 {
      color: #66AA33;
    }

    img {
      height: 200px;
    }

    a:hover, a:focus {
      text-decoration: none;
    }
    p {
      font-size: 20px;
      color: #7F7F7F;
    }
  }
}
