@import "variables";
@import "mixins";

.home-wrapper {
	margin-top: 70px;

	@media (max-width: 767px) {
    margin-top: 58px;
  }
}
.home-banner {
	background-image: url(<%= asset_path('home.jpg') %>);
	@include home-banner;
}
.network-banner {
	background-image: url(<%= asset_path('network.jpg') %>);
	@include home-banner;
}
.home-mid-section {
	text-align: center;

	.aim-fact__wrapper {
		width: 100%;
		margin: 0 auto;
		max-width: 1300px;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;

		.aim-fact {
			height: 440px;
			width: 400px;
			text-align: center;
			margin: 0 10px;

			img {
				width: 315px;
				height: 215px;
			}
			h3 {
				color: $green;
			}
			p {
				color: $grey;
				text-align: justify;
			}
		}
	}
}

.former-speakers__wrapper {
	display: flex;
	flex-direction: column;
	align-items: center;

	.speakers {
		display: flex;
		flex-flow: wrap;
		justify-content: center;
		max-width: 1366px;

		.speaker {
			width: 300px;
			text-align: center;

			img {
				width: 200px;
				height: 200px;
			}
			.speaker__info {
				margin: 0 50px;
				max-width: 200px;

				h3 {
					color: $green;
				}
				p{
					color: $grey;
				}
			}
		}
	}
}
.home-sponsors {
	text-align: center;
}
.sponsors {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;

	.sponsor {
		margin: 0 30px;
		width: 150px;
		cursor: pointer;

		img {
			width: 150px;
		}
		h3 {
			color: $green;
		}
		p {
			color: $grey;
		}
	}
	a:hover {
		text-decoration: none;
	}
}
