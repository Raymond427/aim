@import "variables";
@import "mixins";

.home-wrapper {
	margin-top: 70px;
}
.home-banner {
	background-image: url(<%= asset_path('home.jpg') %>);
	@include home-banner;
}
.network-banner {
	background-image: url(<%= asset_path('network.jpg') %>);
	@include home-banner;
}
.home-mid-section {
	text-align: center;

	.aim-fact__wrapper {
		width: 100%;
		margin: 0 auto;
		max-width: 1300px;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		text-align: center;

		.aim-fact {
			height: 440px;
			width: 400px;
			text-align: center;
			margin: 0 10px;

			img {
				width: 315px;
				height: 215px;
			}
			p {
				text-align: justify;
			}
		}
	}
}

.former-speakers__wrapper {
	text-align: center;

	.speakers {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		max-width: 1366px;
		margin: 0 auto;

		.speaker {
			width: 300px;

			img {
				width: 200px;
				height: 200px;
			}
			.speaker__info {
				margin: 0 50px;
				max-width: 200px;
			}
		}
	}
}
.home-sponsors {
	text-align: center;
}
.sponsors {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	text-align: center;

	.sponsor {
		margin: 0 10px;

		img {
			height: 150px;
		}
		.sponsor__info, .sponsor__info:hover {
			text-decoration: none;
			color: inherit;
		}
	}
}
